<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="universal_config_settings_form" model="ir.ui.view">
			<field name="name">universal.config.settings.form</field>
			<field name="model">universal.config.settings</field>
			<field name="priority" eval="20"/>
			<field name="arch" type="xml">
				<form string="Configure Universal" class="oe_form_configuration">
					<header>
						<button string="Apply" type="object" name="execute" class="oe_highlight" />
						or
						<button string="Cancel" type="object" name="cancel" class="oe_link" />
					</header>
					<group string="Universal Car Rental Global Settings">
						<field name="default_first_party_name" />
						<field name="default_first_party_position" />
					</group>
				</form>
			</field>
		</record>

		<record id="universal_action_global_settings" model="ir.actions.act_window">
			<field name="name">Universal Car Rental</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">universal.config.settings</field>
			<field name="view_mode">form</field>
			<field name="target">inline</field>
		</record>

		<menuitem id="universal_menu_global_settings" parent="base.menu_config" sequence="10" action="universal_action_global_settings"/>

	</data>
</openerp>
