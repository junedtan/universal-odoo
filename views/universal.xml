<openerp>
	<data>
		
		<template id="assets_frontend" inherit_id="website.assets_frontend" name="Universal">
			<xpath expr="." position="inside">
				<link rel='stylesheet' href='/universal/static/src/css/universal.css'/>
				<script type="text/javascript" src="/universal/static/src/js/website_universal.js"></script>
				<link rel='stylesheet' href='/universal/static/src/css/website_mobile_app.css'/>
				<script type="text/javascript" src="/universal/static/src/js/website_mobile_activities.js"></script>
				<script type="text/javascript" src="/universal/static/src/js/website_mobile_intents.js"></script>
				<script type="text/javascript" src="/universal/static/src/js/website_mobile_datasources.js"></script>
				<script type="text/javascript" src="/universal/static/src/js/website_mobile_app.js"></script>
			</xpath>
		</template>

		<template id="assets_backend" name="ipc_idss assets" inherit_id="web.assets_backend">
			<xpath expr="." position="inside">
				<link rel='stylesheet' href='/universal/static/src/css/timeline.css'/>
				<script type="text/javascript" src="/universal/static/src/js/timeline.js"></script>
			</xpath>
		</template>
		
		<template id="website_hr_attendance" name="Attendance">
			<t t-call="website.layout">
				<div id="wrap">
					<div class="container universal_website_attendance">
						<div class="row">
							<div class="col-md-12 mb16 mt16">
								<div id="message_container"></div>
								<div t-if="view_mode in ['employee','customer']" id="attendance_container" data-mode="employee" t-att-data-employee="employee_id" t-att-data-customer="customer_id">
									Loading...
								</div>
								<div t-if="view_mode == 'general_error'" class="oe_callout oe_callout_danger">
									<h4>Error</h4>
									<p>
										You must login either as customer or driver.
									</p>
								</div>
								<div t-if="view_mode == 'customer_error'" class="oe_callout oe_callout_danger">
									<h4>Error</h4>
									<p>
										It appears that you do not belong to any company that is partnering with PT Universal. Please contact administration if you believe this is not the case.
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</t>
		</template>
		
		<template id="website_hr_attendance_employee" name="Attendance (Employee View)">
			<div t-if="contracts and attendance_action == 'start'">
				<h4>Start a new session</h4>
				<div id="div_start">
					<p>
						Select customer then click Start button.
					</p>
					<div class="form-group">
						<select class="form-control" id="employee_contract_id" name="employee_contract_id">
							<t t-foreach="contracts" t-as="contract">
								<option t-att-value="contract.id"><t t-esc="contract.customer.name" /></option>
							</t>
						</select>
					</div>
					<input type="hidden" id="view_mode" t-att-value="view_mode" />
					<div class="form-group">
						<button type="button" id="btn_start" class="btn btn-warning btn-block btn-lg">Start</button>
					</div>
				</div>
			</div>
			<div t-if="last_attendance and attendance_action in ['start_pending','stop','stop_pending']">
				<h4 t-if="attendance_action=='stop'">Current session is running...</h4>
				<h4 t-if="attendance_action=='start_pending'">Waiting for confirmation...</h4>
				<h4 t-if="attendance_action=='stop_pending'">It's almost finished today...</h4>
				<table class="table" id="attendances_table" t-att-data-contract="contract_id" t-if="last_attendance">
					<tr>
						<th></th>
						<th>Date</th>
						<th>Time</th>
						<th>Customer</th>
					</tr>
					<tr t-att-class="'universal-tr-%s' % last_attendance['action']">
						<td style="padding: 0; font-size: 150%"><span t-att-class="'fa fa-%s center' % last_attendance['action']"></span></td>
						<td t-esc="last_attendance['date']" />
						<td t-esc="last_attendance['time']" />
						<td t-esc="last_attendance['customer']" />
					</tr>
				</table>
			</div>
			<div t-if="last_attendance and attendance_action == 'stop'" class="form-group">
				<h4>Before you finish...</h4>
				<p>
					<span>Do you go out of town this time?</span>
					<br />
					<div class="btn-group" data-toggle="buttons" id="out_of_town_div">
						<label class="btn btn-lg btn-success active">
							<input type="radio" name="out_of_town" id="out_of_town_no" checked="checked" value="no"/>No
						</label>
						<label class="btn btn-lg btn-success">
							<input type="radio" name="out_of_town" id="out_of_town_roundtrip" value="roundtrip"/>Roundtrip
						</label>
						<label class="btn btn-lg btn-success">
							<input type="radio" name="out_of_town" id="out_of_town_overnight" value="overnight"/>Overnight
						</label>
					</div>
				</p>
				<t t-call="universal.website_hr_expenses_form" />
				<h4>Routes</h4>
				<p>
					Please input street name or area separated by comma and space. 
				</p>
				<div class="form-group">
					<textarea id="routes" rows="5" class="form-control" placeholder="Input routes you went through today.."></textarea>
				</div>
				<button type="button" id="btn_stop" class="btn btn-warning btn-block btn-lg">Finish</button>
			</div>
			<div t-if="last_attendance and attendance_action in ['start_pending','stop_pending']" class="form-group">
				<button type="button" id="btn_recheck" class="btn btn-warning btn-block btn-lg">Recheck Now</button>
			</div>
			<div t-if="attendances and contracts">
				<hr/>
				<h4>Past Attendances (last 7 days)</h4>
				<p>
					For full attendance data inquiry, please contact administration.
				</p>
				<table class="table">
					<tr>
						<th></th>
						<th>Date</th>
						<th>Time</th>
						<th>Customer</th>
					</tr>
					<t t-foreach="attendances" t-as="att">
						<tr t-att-class="'universal-tr-%s' % att['action']">
							<td style="padding: 0; font-size: 150%"><span t-att-class="'fa fa-%s center' % att['action']"></span></td>
							<td t-esc="att['date']" />
							<td t-esc="att['time']" />
							<td t-esc="att['customer']" />
						</tr>
					</t>
				</table>
			</div>
			<div t-if="not attendances and not contracts" class="oe_callout oe_callout_info">
				<h4>Info</h4>
				<p>
					It appears that there is currently no contract you are working on. Please contact administration if you believe 
					this is not the case.
				</p>
			</div>
		</template>
		
		<template id="website_hr_expenses_form" name="Daily Expenses Form">
			<div t-if="last_attendance and attendance_action in ['stop','stop_pending']" class="form-group">
				<div t-if="expenses" style="max-width: 100%; overflow-x: auto">
					<h4>Expenses</h4>
					<p t-if="mode == 'employee'">
						Before finishing, do not forget to record expenses occuring during this session:
					</p>
					<p t-if="mode == 'customer'">
						Below are expenses recorded by your driver during this session:
					</p>
					<table class="table" id="expenses_table" t-att-data-expense="expense_id">
						<t t-foreach="expenses" t-as="expense">
							<tr>
								<td colspan="2" style="padding-bottom: 0">
									<t t-esc="expense['name']" />
									<label class="expense_subtotal">0</label>
								</td>
							</tr>
							<tr class="expense_line">
								<td class="expense_cell" style="width: 35%">
									<input type="hidden" name="product_id[]" t-att-value="expense['product_id']" />
									<t t-if="mode == 'employee'">
										<input type="number" name="qty[]" min="0" placeholder="Qty" />
									</t>
									<t t-if="mode == 'customer'">
										<input type="number" name="qty[]" min="0" placeholder="Qty" readonly="readonly" t-att-value="expense['qty']" />
									</t>
								</td>
								<td class="expense_cell" style="width: 65%">
									<t t-if="mode == 'employee'">
										<input type="number" name="unit_price[]" min="0" placeholder="Unit price" t-att-value="expense['unit_price']" />
									</t>
									<t t-if="mode == 'customer'">
										<input type="number" name="unit_price[]" min="0" reaodnly="readonly" t-att-value="expense['unit_price']" />
									</t>
								</td>
							</tr>
						</t>
						<tr>
							<td colspan="2" style="text-align: right"><strong>Total: <span class="expenses_total"></span></strong></td>
						</tr>
					</table>
					<p t-if="mode == 'employee'">
						Check again expense input. Should you forget to record expenses or recording them incorrectly, you must contact administration. 
						Customer approval is still required.
					</p>
					<p t-if="mode == 'customer'">
						If you find this record incorrect, please Reject and wait for your driver to correctly reinput expenses.
					</p>
				</div>
				<div t-if="not expenses">
					<p t-if="mode == 'employee'">
						Expense categories has not been set. Please contact administration.
					</p>
				</div>
			</div>
		</template>

		<template id="website_hr_attendance_customer" name="Attendance (Customer View)">
			<div t-if="contracts and attendance_action == 'start'">
				<h4>Start a new session</h4>
				<div id="div_start">
					<p>
						Waiting for your driver to start today's session...
					</p>
					<div class="form-group button-recheck">
						<button type="button" id="btn_recheck" class="btn btn-warning btn-block btn-lg">Recheck Now</button>
					</div>
				</div>
			</div>
			<div t-if="contracts and attendance_action == 'stop'">
				<h4>Current session is running...</h4>
				<div id="div_start">
					<p>
						Please wait for your driver to finish this session, then tap Recheck Now.
					</p>
				</div>
			</div>
			<div t-if="last_attendance and attendance_action in ['start_pending','stop_pending']">
				<h4>Confirm Start/Finish</h4>
			</div>
			<div t-if="last_attendance and attendance_action in ['start_pending','stop_pending','stop']">
				<table class="table" id="attendances_table" t-att-data-contract="contract_id" t-if="last_attendance" t-att-data-attendance="last_attendance['id']">
					<tr>
						<th></th>
						<th>Date</th>
						<th>Time</th>
						<th>Customer</th>
					</tr>
					<tr t-att-class="'universal-tr-%s' % last_attendance['action']">
						<td style="padding: 0; font-size: 150%"><span t-att-class="'fa fa-%s center' % last_attendance['action']"></span></td>
						<td t-esc="last_attendance['date']" />
						<td>
							<input type="text" t-att-value="last_attendance['time']" readonly="readonly" id="confirm_time" style="border: 0" />
						</td>
						<td t-esc="last_attendance['customer']" />
					</tr>
				</table>
			</div>
			<div t-if="last_attendance and attendance_action in ['stop_pending']" class="form-group">
				<p>
					<t t-esc="out_of_town" />
				</p>
				<t t-call="universal.website_hr_expenses_form" />
			</div>
			<div t-if="last_attendance and attendance_action in ['start_pending','stop_pending']" class="form-group">
				<button type="button" id="btn_confirm" class="btn btn-success btn-block btn-lg">Confirm</button>
				<button type="button" id="btn_reject" class="btn btn-danger btn-block btn-lg">Reject</button>
			</div>
			<div t-if="last_attendance and attendance_action in ['stop']" class="form-group">
				<button type="button" id="btn_recheck" class="btn btn-warning btn-block btn-lg">Recheck Now</button>
			</div>
			<div t-if="attendances and contracts">
				<hr/>
				<h4>Past Attendances (last 7 days)</h4>
				<p>
					For full attendance data inquiry, please contact administration.
				</p>
				<table class="table">
					<tr>
						<th></th>
						<th>Date</th>
						<th>Time</th>
						<th>Customer</th>
					</tr>
					<t t-foreach="attendances" t-as="att">
						<tr t-att-class="'universal-tr-%s' % att['action']">
							<td style="padding: 0; font-size: 150%"><span t-att-class="'fa fa-%s center' % att['action']"></span></td>
							<td t-esc="att['date']" />
							<td t-esc="att['time']" />
							<td t-esc="att['customer']" />
						</tr>
					</t>
				</table>
			</div>
			<div t-if="not attendances and not contracts" class="oe_callout oe_callout_info">
				<h4>Info</h4>
				<p>
					It appears that you are not currently under any contract with PT Universal. Please contact administration if you believe 
					this is not the case.
				</p>
			</div>
		</template>

	</data>
</openerp>