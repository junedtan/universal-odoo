<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

	<t t-name="website_mobile_app_create_order">
		<div class="full_height container universal_website_mobile_app">
			<div class="col-md-6">
				<h2>Information</h2>
				<div class="form-group ml10">
					<label for="create_order_contract">Contract</label>
					<select id="create_order_contract" class="form-control">
						<t t-foreach="contract_datas" t-as="contract_data">
							<option t-attf-value="{{contract_data.id}}"><t t-esc="contract_data.name"/></option>
						</t>
					</select>
				</div>
				<div class="form-group ml10">
					<label for="create_order_fleet_vehicle">Fleet Vehicle</label>
					<select id="create_order_fleet_vehicle" class="form-control">
						<t t-foreach="fleet_vehicle_datas" t-as="fleet_vehicle_data">
							<option t-attf-value="{{fleet_vehicle_data.id}}"><t t-esc="fleet_vehicle_data.name"/></option>
						</t>
					</select>
				</div>
			</div>
			<div class="col-md-6">
				<h2>Time</h2>
				<div class="form-group ml10">
					<label for="create_order_start_planned">Start Planned</label>
					<input id="create_order_start_planned" class="form-control" type="datetime-local" t-attf-value="{{start_planned_default}}"/>
				</div>
				<div class="form-group ml10">
					<label for="create_order_finish_planned">Finish Planned</label>
					<input id="create_order_finish_planned" class="form-control" type="datetime-local" t-attf-value="{{finish_planned_default}}"/>
				</div>
			</div>
			<div class="row ml10">
				<div class="col-md-1 form-group">
					<button type="button" id="btn_create_order" class="btn btn-success">Create Order</button>
				</div>
			</div>
		</div>
	</t>

</templates>