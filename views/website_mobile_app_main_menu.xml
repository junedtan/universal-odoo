<openerp>
	<data>

		<template id="website_mobile_app_main_menu" name="Mobile App">
			<t t-call="website.layout">
				<div class="container universal_website_mobile_app">
					<div class="row" id="menu_container">
						<t t-if="user_group == ''">
							<div class="col-md-12 mb16 mt16">
								<div class="oe_callout oe_callout_danger">
									<h4>Error</h4>
									<p>
										You must login as Fullday Passenger or Booker or PIC or Approver.
									</p>
								</div>
							</div>
						</t>
						<t t-if="user_group == 'fullday_passenger'">
							<table class="table table-hover">
								<tbody>
									<tr>
										<td id="website_mobile_app_menu_book_vehicle" class = "td_menu" style = "border-right:1px solid; border-color:lightgray">
										<span class="glyphicon glyphicon-plus" style="margin-right:16px"></span>Book Vehicle</td>
										<td id="website_mobile_app_menu_list_orders" class = "td_menu" style = "border-right:1px solid; border-color:lightgray">
										<span class="glyphicon glyphicon-align-justify" style="margin-right:16px"></span>Orders</td>
										<td id="website_mobile_app_menu_change_password" class = "td_menu">
										<span class="glyphicon glyphicon-edit" style="margin-right:16px"></span>Change Password</td>
									</tr>
								</tbody>
							</table>
						</t>
						<t t-if="user_group == 'booker'">
							<table class="table table-hover">
								<tbody>
									<tr>
										<td id="website_mobile_app_menu_book_vehicle" class = "td_menu" style = "border-right:1px solid; border-color:lightgray">
										<span class="glyphicon glyphicon-plus" style="margin-right:16px"></span>Book Vehicle</td>
										<td id="website_mobile_app_menu_list_orders" class = "td_menu">
										<span class="glyphicon glyphicon-align-justify" style="margin-right:16px"></span>Orders</td>
									</tr>
								</tbody>
							</table>
						</t>
						<t t-if="user_group == 'pic'">
							<table class="table table-hover">
								<tbody>
									<tr>
										<td id="website_mobile_app_menu_list_contract" class = "td_menu" style = "border-right:1px solid; border-color:lightgray">
										<span class="glyphicon glyphicon-credit-card" style="margin-right:16px"></span>Contract</td>
										<td id="website_mobile_app_menu_list_shuttle" class = "td_menu" style = "border-right:1px solid; border-color:lightgray">
										<span class="fa fa-bus" style="margin-right:16px"></span>Shuttle</td>
										<td id="website_mobile_app_menu_list_orders" class = "td_menu">
										<span class="glyphicon glyphicon-align-justify" style="margin-right:16px"></span>Orders</td>
									</tr>
								</tbody>
							</table>
						</t>
						<t t-if="user_group == 'approver'">
							<table class="table table-hover">
								<tbody>
									<tr>
										<td id="website_mobile_app_menu_list_contract" class = "td_menu" style = "border-right:1px solid; border-color:lightgray">
										<span class="glyphicon glyphicon-credit-card" style="margin-right:16px"></span>Contract</td>
										<td id="website_mobile_app_menu_book_vehicle" class = "td_menu" style = "border-right:1px solid; border-color:lightgray">
										<span class="glyphicon glyphicon-plus" style="margin-right:16px"></span>Book Vehicle</td>
										<td id="website_mobile_app_menu_list_orders" class = "td_menu">
										<span class="glyphicon glyphicon-align-justify" style="margin-right:16px"></span>Orders</td>
									</tr>
								</tbody>
							</table>
						</t>
					</div>
					<t t-if="user_group != ''">
						<div class="row" id="main_container"/>
					</t>
				</div>
			</t>
		</template>

	</data>
</openerp>