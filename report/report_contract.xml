<openerp>
	<data>
		
		<template id="report_contract_document">
			<t t-call="report.external_layout">
				<div class="page">
					<div class="row">
						<t t-if="o.contract_type=='contract_attc'">
							<t t-call="universal.report_contract_attachment" />
						</t>
						<t t-if="o.contract_type=='rent_driver'">
							<t t-call="universal.report_contract_rent_driver" />
						</t>
						<t t-if="o.contract_type=='non_rent_driver'">
							<t t-call="universal.report_contract_non_rent_driver" />
						</t>
						Contract Ref: <span t-field="o.name" />
					</div>
				</div>
			</t>
		</template>
		
		<template id="report_contract">
			<t t-call="report.html_container">
				<t t-foreach="doc_ids" t-as="doc_id">
					<t t-raw="translate_doc(doc_id, doc_model, 'customer.lang','universal.report_contract_document')"/>
				</t>
			</t>
		</template>
		
		<template id="report_contract_attachment">
			<div>
				test contract attachment
			</div>
		</template>
		
		<template id="report_contract_rent_driver">
			<div>
				test rent driver
			</div>
		</template>
		
		<template id="report_contract_non_rent_driver">
			<div>
				test non rent driver
			</div>
		</template>
	</data>
</openerp>