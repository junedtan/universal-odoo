<openerp>
	<data>

		<template id="website_mobile_app_main_menu" name="Mobile App">
			<t t-call="website.layout">
				<div class="container universal_website_mobile_app">
					<div class="panel">
						<div id="button_back" style="height:100%;"><span class="fa fa-chevron-circle-left"/></div>
						<h2 style="margin-left:10px;">UNIVERSAL</h2>
					</div>

					<div class="row" id="menu_container">
						<t t-if="user_group == ''">
							<div class="col-md-12 mb16 mt16">
								<div class="oe_callout oe_callout_danger">
									<h4>Error</h4>
									<p>
										You must login as Fullday Passenger or Booker or PIC or Approver.
									</p>
								</div>
							</div>
						</t>

						<t t-if="user_group == 'fullday_passenger'">
							<ul>
								<li><a id="website_mobile_app_menu_book_vehicle">
									<h1 class="no_margin"><span class="glyphicon glyphicon-plus"></span></h1>
									<br/><span>Book Vehicle</span>
								</a></li>
								<li><a id="website_mobile_app_menu_list_orders">
									<h1 class="no_margin"><span class="glyphicon glyphicon-align-justify"></span></h1>
									<br/><span>Orders</span>
								</a></li>
								<li><a id="website_mobile_app_menu_change_password">
									<h1 class="no_margin"><span class="glyphicon glyphicon-edit"></span></h1>
									<br/><span>Change Password</span>
								</a></li>
							</ul>
						</t>
						<t t-if="user_group == 'booker'">
							<ul>
								<li><a id="website_mobile_app_menu_book_vehicle">
									<h1 class="no_margin"><span class="glyphicon glyphicon-plus"></span></h1>
									<br/><span>Book Vehicle</span>
								</a></li>
								<li><a id="website_mobile_app_menu_list_orders">
									<h1 class="no_margin"><span class="glyphicon glyphicon-align-justify"></span></h1>
									<br/><span>Orders</span>
								</a></li>
							</ul>
						</t>
						<t t-if="user_group == 'pic'">
							<ul>
								<li><a id="website_mobile_app_menu_list_contract">
									<h1 class="no_margin"><span class="glyphicon glyphicon-credit-card"></span></h1>
									<br/><span>Contract</span>
								</a></li>
								<li><a id="website_mobile_app_menu_list_shuttle">
									<h1 class="no_margin"><span class="fa fa-bus"></span></h1>
									<br/><span>Shuttle</span>
								</a></li>
								<li><a id="website_mobile_app_menu_list_orders">
									<h1 class="no_margin"><span class="glyphicon glyphicon-align-justify"></span></h1>
									<br/><span>Orders</span>
								</a></li>
							</ul>
						</t>
						<t t-if="user_group == 'approver'">
							<ul>
								<li><a id="website_mobile_app_menu_list_contract">
									<h1 class="no_margin"><span class="glyphicon glyphicon-credit-card"></span></h1>
									<br/><span>Contract</span>
								</a></li>
								<li><a id="website_mobile_app_menu_book_vehicle">
									<h1 class="no_margin"><span class="glyphicon glyphicon-plus"></span></h1>
									<br/><span>Book Vehicle</span>
								</a></li>
								<li><a id="website_mobile_app_menu_list_orders">
									<h1 class="no_margin"><span class="glyphicon glyphicon-align-justify"></span></h1>
									<br/><span>Orders</span>
								</a></li>
							</ul>
						</t>
					</div>
					<t t-if="user_group != ''">
						<div class="row" id="main_container"/>
					</t>
				</div>
			</t>
		</template>

	</data>
</openerp>