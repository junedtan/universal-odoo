<openerp>
	<data>
		<record model="ir.ui.view" id="view_employee_form">
			<field name="name">hr.employee.form</field>	
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='work_email']" position="replace" />
				<xpath expr="//field[@name='work_phone']" position="replace" />
				<xpath expr="//field[@name='identification_id']" position="replace" />
				<xpath expr="//field[@name='mobile_phone']" position="replace" />
				<xpath expr="//page[@string='Public Information']" position="before" >
					<page string="Personal Info">
						<group>
							<group string="Personal Info">
								<field name="identification_id" />
								<field name="place_of_birth" />
								<field name="religion" />
							</group>
							<group string="Contact Info">
								<field name="work_email" />
								<field name="work_phone" />
								<field name="mobile_phone" />
								<field name="mobile_phone2" />
								<field name="mobile_phone3" />
							</group>
							<group string="Driver Data">
								<field name="driver_lisence_number" />
								<field name="driver_lisence_date" />
							</group>
							<group string="Work Status">
								<field name="overtime_ready" />
							</group>
						</group>
					</page>
				</xpath>
				<xpath expr="//field[@name='bank_account_id']" position="after" >
					<field name="bank_name" />
					<field name="bank_acc_owner" />
				</xpath>
				<xpath expr="//field[@name='job_id']" position="after" >
					<field name="start_working" />
					<field name="driver_company" />
					<field name="homebase" />
					<field name="emp_no" />
				</xpath>
			</field>
		</record>
	</data>
</openerp>