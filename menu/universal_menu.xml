			<field name="view_mode">tree,form</field>
			<field name="context">{'mode': 'contract_attachment','default_contract_type':'contract_attc', 'search_default_filter_ongoing': 1}</field>
			<field name="domain">[('contract_type','in',['contract_attc'])]</field>
		</record>
		
		<record id="hr_contract.action_hr_contract" model="ir.actions.act_window">
            <field name="context">{'search_default_current':1,'search_default_filter_ongoing': 1}</field>
