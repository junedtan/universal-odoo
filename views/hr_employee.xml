<openerp>
	<data>

		<record model="ir.ui.view" id="view_employee_form">
			<field name="name">hr.employee.form</field>	
			<field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form" />
			<field name="priority" eval="100" />
			<field name="arch" type="xml">
				<xpath expr="//label[@for='work_phone']" position="replace" />
				<xpath expr="//field[@name='work_phone']" position="replace" />
				<xpath expr="//div[@class='oe_title']" position="inside">
					<label for="mobile_phone" class="oe_edit_only">Mobile 1</label>
					<field name="mobile_phone" />
				</xpath>
				<xpath expr="//page[@string='Personal Information']" position="replace">
					<page string="Biodata">
						<group>
							<group string="Personal Info">
								<group>
									<field name="place_of_birth" />
									<field name="date_of_birth" />
									<field name="gender" class="oe_inline" />
									<field name="religion" class="oe_inline" />
								</group>
								<group>
									<field name="identification_id" />
									<field name="npwp" />
								</group>
							</group>
						</group>
					</page>
				</xpath>
				<xpath expr="//page[@string='Biodata']" position="after">
					<page string="Contact">
						<group>
							<group string="Residential Address">
								<field name="residential_address" string="Address" />
								<field name="residential_phone" string="Phone" />
								<field name="address_home_id" invisible="1" />
							</group>
							<group string="Current Address">
								<field name="address" string="Address" />
								<field name="phone" string="Mobile 1" />
								<field name="mobile_phone2" />
								<field name="mobile_phone3" />
							</group>
						</group>
					</page>
				</xpath>
				<xpath expr="//page[@string='Public Information']" position="replace">
					<page string="Work-related">
						<group>
							<group string="Position">
								<field name="department_id" on_change="onchange_department_id(department_id)" />
								<field name="job_id" />
								<field name="company_id" invisible="1" />
								<field name="parent_id" />
								<field name="coach_id" />
								<field name="user_id" on_change="onchange_user(user_id)" string="Employee Login" context="{'default_groups_ref': ['base.group_user']}" />
							</group>
							<group string="Information">
								<field name="emp_no" />
								<field name="start_working" />
								<field name="interview_date" />
								<field name="work_year" readonly="1"/>
							</group>
						</group>
					</page>
				</xpath>
				<xpath expr="//page[@string='Work-related']" position="after">
					<page string="Driver">
						<group>
							<group string="Current Status">
								<field name="driver_type" />
								<field name="driver_company_id" />
								<field name="homebase_id" />
								<field name="overtime_ready" />
								<field name="holiday_ready" />
							</group>
							<group string="Driver Info">
								<field name="driver_license_number" />
								<field name="driver_license_date" />
								<field name="driver_area" />
								<field name="language" />
								<field name="transportation" />
								<field name="residence_location" />
							</group>
						</group>
					</page>
				</xpath>
				<xpath expr="//page[@string='HR Settings']" position="after">
					<page string="Notes">
						<field name="notes" />
					</page>
				</xpath>
				<xpath expr="//page[@string='HR Settings']" position="replace">
					<page string="HR Settings">
						<group name="active_group">
							<field name="active" />
						</group>
					</page>
				</xpath>
				<xpath expr="//group[@name='active_group']" position="after">
					<group string="Payroll">
						<field name="bank_account_id" />
					</group>
				</xpath>
			</field>
		</record>

	</data>
</openerp>